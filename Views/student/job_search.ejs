
<head>
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/stylesheets/student/job_search.css">
</head>
<body>
    <section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-user'></i>
			<span class="text">JOB SEEKER</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/student/dashboard">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/student/profile">
					<i class='bx bx-user-circle'></i>
					<span class="text">Profile Management</span>
				</a>
			</li>
			<li class="active">
				<a href="/student/job_search">
					<i class='bx bx-search-alt'></i>
					<span class="text">Job Search</span>
				</a>
			</li>
			<li>
				<a href="/student/app_status">
					<i class='bx bx-file'></i>
					<span class="text">Application Tracking</span>
				</a>
			</li>
			<li>
				<a href="/student/counselling">
					<i class='bx bx-support'></i>
					<span class="text">Counseling Sessions</span>
				</a>
			</li>
			<li>
				<a href="/student/mentorship">
					<i class='bx bx-chalkboard'></i>
					<span class="text">Mentorship Programs</span>
				</a>
			</li>
			<li>
				<a href="/student/feedback">
					<i class='bx bx-message-square-detail'></i>
					<span class="text">Feedback & Support</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/login" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->

	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu'></i>
			<form action="#">
				<div class="form-input">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="profile">
				<img src="/images/student_pic.png" alt="USER IMAGE">
			</a>
		</nav>
		<!-- NAVBAR -->

		<main>
			<div class="container-search mt-4">
				<h3 class="search-title">Search your jobs here</h3>
				<!-- Search Bar and Filters -->
				<div class="row mb-4">
					<div class="col-md-12">
						<div class="input-group mb-3">
							<input type="text" class="form-control" id="search-keyword" placeholder="Search by keywords">
							<input type="text" class="form-control" id="search-location" placeholder="Location">
							<select class="custom-select" id="search-job-type">
								<option value="">Job Type</option>
								<option value="full-time">Full-Time</option>
								<option value="part-time">Part-Time</option>
								<option value="internship">Internship</option>
							</select>
							<div class="input-group-append">
								<button class="btn btn-primary" type="button" id="search-btn">Search</button>
							</div>
						</div>
						<div class="form-group">
							<label for="filter-salary">Salary Range</label>
							<input type="text" class="form-control" id="filter-salary" placeholder="e.g., 50000 - 70000">
						</div>
						<div class="form-group">
							<label for="filter-company">Company</label>
							<input type="text" class="form-control" id="filter-company" placeholder="Company Name">
						</div>
						<div class="form-group">
							<label for="filter-industry">Industry</label>
							<input type="text" class="form-control" id="filter-industry" placeholder="Industry">
						</div>
						<div class="form-group">
							<label for="filter-skills">Required Skills</label>
							<input type="text" class="form-control" id="filter-skills" placeholder="Skills">
						</div>
					</div>
				</div>

				<!-- Job Listings -->
				<div id="job-listings" class="mb-4">
					<!-- Job items will be dynamically inserted here -->
				</div>

				<!-- Pagination -->
				<nav>
					<ul class="pagination" id="pagination">
						<!-- Pagination items will be dynamically inserted here -->
					</ul>
				</nav>
			</div>
		</main>
	</section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/javascripts/student/job_search.js"></script>
</body>
