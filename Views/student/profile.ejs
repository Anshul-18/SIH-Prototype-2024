<!-- NAVBAR -->
 <main>
    <div class="container mt-5">
        <h2 style="text-align: center;">Profile Management</h2>
        <!-- Edit Button -->
        <div class="text-end">
            <button id="editBtn" class="btn btn-primary">Edit</button>
        </div>
        <!-- Authentication Modal -->
        <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="authModalLabel">Authentication Required</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="passwordInput" class="form-label">Enter your password:</label>
                            <input type="password" class="form-control" id="passwordInput">
                            <div id="passwordError" class="text-danger mt-2" style="display: none;">Incorrect password, please try again.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" id="authConfirmBtn" class="btn btn-primary">Confirm</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Personal Information Section -->
        <div class="container-imp profile-management mt-5 p-4">
            <h4>Personal Information</h4>
            <form id="personalInfoForm">
                <div class="mb-3">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullName" disabled>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" disabled>
                </div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number (Optional)</label>
                    <input type="text" class="form-control" id="phoneNumber" disabled>
                </div>
                <div class="mb-3">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" id="dob" disabled>
                </div>
                <button type="button" class="btn btn-primary" id="updatePersonalInfoBtn" disabled>Update</button>
            </form>
        </div>
    
        <!-- Education Details Section -->
        <div class="container-imp profile-management mt-5 p-4">
            <h4>Education Details</h4>
            <form id="educationDetailsForm">
                <div class="mb-3">
                    <label for="qualification" class="form-label">Highest Qualification</label>
                    <select class="form-select" id="qualification" disabled>
                        <option>Bachelor's</option>
                        <option>Master's</option>
                        <option>PhD</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="fieldOfStudy" class="form-label">Field of Study</label>
                    <input type="text" class="form-control" id="fieldOfStudy" disabled>
                </div>
                <div class="mb-3">
                    <label for="university" class="form-label">University/College</label>
                    <input type="text" class="form-control" id="university" disabled>
                </div>
                <div class="mb-3">
                    <label for="graduationYear" class="form-label">Year of Graduation</label>
                    <input type="number" class="form-control" id="graduationYear" disabled>
                </div>
                <button type="button" class="btn btn-primary" id="updateEducationBtn" disabled>Update</button>
            </form>
        </div>
    
        <!-- Experience Details Section -->
        <div class="container-imp profile-management mt-5 p-4">
            <h4>Experience Details</h4>
            <form id="experienceDetailsForm">
                <div class="mb-3">
                    <label for="employmentStatus" class="form-label">Current Employment Status</label>
                    <input type="text" class="form-control" id="employmentStatus" disabled>
                </div>
                <div class="mb-3">
                    <label for="jobTitle" class="form-label">Current Job Title</label>
                    <input type="text" class="form-control" id="jobTitle" disabled>
                </div>
                <div class="mb-3">
                    <label for="experienceYears" class="form-label">Years of Experience</label>
                    <input type="number" class="form-control" id="experienceYears" disabled>
                </div>
                <div class="mb-3">
                    <label for="industryPreference" class="form-label">Industry Preference</label>
                    <input type="text" class="form-control" id="industryPreference" disabled>
                </div>
                <button type="button" class="btn btn-primary" id="updateExperienceBtn" disabled>Update</button>
            </form>
        </div>
    
        <!-- Additional Details Section -->
        <div class="container-imp profile-management mt-5 p-4">
            <h4>Additional Details</h4>
            <form id="additionalDetailsForm">
                <div class="mb-3">
                    <label for="jobLocation" class="form-label">Preferred Job Location(s)</label>
                    <input type="text" class="form-control" id="jobLocation" disabled>
                </div>
                <div class="mb-3">
                    <label for="resumeUpload" class="form-label">Resume</label>
                    <input type="file" class="form-control" id="resumeUpload" disabled>
                </div>
                <div class="mb-3">
                    <label for="linkedinUrl" class="form-label">LinkedIn URL</label>
                    <input type="url" class="form-control" id="linkedinUrl" disabled>
                </div>
                <div class="mb-3">
                    <label for="jobAlerts" class="form-label">Job Alerts Preferences</label>
                    <select class="form-select" id="jobAlerts" disabled>
                        <option>Daily</option>
                        <option>Weekly</option>
                        <option>Monthly</option>
                    </select>
                </div>
                <button type="button" class="btn btn-primary" id="updateAdditionalDetailsBtn" disabled>Update</button>
            </form>
        </div>
    </div>
 </main>
