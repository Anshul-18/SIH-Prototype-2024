
<head>
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/stylesheets/student/mentorship.css">
</head>
<body>
    <section id="sidebar">
		<a href="#" class="brand">
			<i class='bx bxs-user'></i>
			<span class="text">JOB SEEKER</span>
		</a>
		<ul class="side-menu top">
			<li>
				<a href="/student/dashboard">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a href="/student/profile">
					<i class='bx bx-user-circle'></i>
					<span class="text">Profile Management</span>
				</a>
			</li>
			<li>
				<a href="/student/job_search">
					<i class='bx bx-search-alt'></i>
					<span class="text">Job Search</span>
				</a>
			</li>
			<li>
				<a href="/student/app_status">
					<i class='bx bx-file'></i>
					<span class="text">Application Tracking</span>
				</a>
			</li>
			<li>
				<a href="/student/counselling">
					<i class='bx bx-support'></i>
					<span class="text">Counseling Sessions</span>
				</a>
			</li>
			<li class="active">
				<a href="/student/mentorship">
					<i class='bx bx-chalkboard'></i>
					<span class="text">Mentorship Programs</span>
				</a>
			</li>
			<li>
				<a href="/student/feedback">
					<i class='bx bx-message-square-detail'></i>
					<span class="text">Feedback & Support</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/login" class="logout">
					<i class='bx bxs-log-out-circle'></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>

	<section id="content">
		<nav>
			<i class='bx bx-menu'></i>
			<form action="#">
				<div class="form-input">
					<button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="profile">
				<img src="/images/student_pic.png" alt="USER IMAGE">
			</a>
		</nav>
		<main>
            <div class="container-main mt-5">
                <h1 class="text-center">Mentorship Programs</h1>
        
                <h2 class="mt-4">Current Mentorships</h2>
                <ul class="list-group" id="mentorshipList"></ul>
        
                <h2 class="mt-5">Enroll in a Program</h2>
                <form id="enrollForm">
                    <div class="form-group">
                        <label for="mentorSelect">Select Mentor</label>
                        <select id="mentorSelect" class="form-control" required>
                            <option value="" disabled selected>Select a mentor</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Enroll</button>
                </form>
        
                <h2 class="mt-5">Progress Tracking</h2>
                <div id="progressTracking" class="border p-3 mb-3"></div>
        
                <h2 class="mt-5">Mentorship Feedback</h2>
                <form id="feedbackForm">
                    <div class="form-group">
                        <label for="feedbackComments">Feedback</label>
                        <textarea class="form-control" id="feedbackComments" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="feedbackRating">Rating (1-5)</label>
                        <input type="number" class="form-control" id="feedbackRating" min="1" max="5" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit Feedback</button>
                </form>
            </div>
        </main>
	</section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="/javascripts/student/mentorship.js"></script>
</body>
